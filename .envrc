# タダカヨ QRチャリティ・コネクト 環境設定
# このディレクトリに入ると自動的に適用されます

# GitHub アカウント設定
export GH_USER="yasushi-honda-prog"
export GH_REPO="yasushi-honda-prog/tadakayo-qr-charity-connect"

# GitHubアカウントを自動切り替え
if command -v gh &> /dev/null; then
    current_user=$(gh api user --jq .login 2>/dev/null || echo "")
    if [ "$current_user" != "$GH_USER" ]; then
        gh auth switch --user "$GH_USER" 2>/dev/null && \
            echo "✓ GitHub account switched to: $GH_USER"
    fi
fi

# GCPプロジェクト設定（将来の実装用）
export GCP_PROJECT="tadakayo-qr-connect"
export GCP_REGION="asia-northeast1"

# プロジェクト情報表示
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo "📦 Project: タダカヨ QRチャリティ・コネクト"
echo "🐙 GitHub:  $GH_REPO"
echo "☁️  GCP:     $GCP_PROJECT"
