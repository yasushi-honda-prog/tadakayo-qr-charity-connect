# タダカヨ QRチャリティ・コネクト 環境設定
# このディレクトリに入ると自動的に適用されます

# GitHub アカウント設定
export GH_USER="yasushi-honda-prog"
export GH_REPO="yasushi-honda-prog/tadakayo-qr-charity-connect"

# GitHubアカウントを自動切り替え
if command -v gh &> /dev/null; then
    current_user=$(gh api user --jq .login 2>/dev/null || echo "")
    if [ "$current_user" != "$GH_USER" ]; then
        gh auth switch --user "$GH_USER" 2>/dev/null && \
            echo "✓ GitHub account switched to: $GH_USER"
    fi
fi

# GCPプロジェクト設定
export GCP_PROJECT="tadakayo-qr-connect"
export GCP_REGION="asia-northeast1"
export CLOUDSDK_ACTIVE_CONFIG_NAME="tadakayo-qr-connect"

# GCP configurationを自動切り替え
if command -v gcloud &> /dev/null; then
    current_config=$(gcloud config configurations list --filter="is_active=true" --format="value(name)" 2>/dev/null || echo "")
    if [ "$current_config" != "$CLOUDSDK_ACTIVE_CONFIG_NAME" ]; then
        gcloud config configurations activate "$CLOUDSDK_ACTIVE_CONFIG_NAME" 2>/dev/null && \
            echo "✓ GCP config switched to: $CLOUDSDK_ACTIVE_CONFIG_NAME"
    fi
fi

# プロジェクト情報表示
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo "📦 Project: タダカヨ QRチャリティ・コネクト"
echo "🐙 GitHub:  $GH_REPO"
echo "☁️  GCP:     $GCP_PROJECT"
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
